{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["main", "feature/*"],
      "conventionalPrerelease": false,
      "conventionalCommits": true,
      "changelog": true
    }
  },
  "ignoreChanges": ["*.md", "*.test.ts", "*.spec.ts", "*.stories.ts"]
}
