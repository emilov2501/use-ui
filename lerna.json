{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.4.0",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true
    },
    "publish": {
      "npmClient": "npm"
    }
  },
  "ignoreChanges": [
    "**/test/**",
    "**/tests/**",
    "**/*.md"
  ]
}
