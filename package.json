{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "lerna publish from-package --no-private",
    "version": "lerna version --no-private",
    "build:use-ui": "lerna run build --scope=useui-ts",
    "dev:www": "lerna run dev --scope=www"
  },
  "devDependencies": {
    "lerna": "^8.1.2",
    "lerna-changelog": "^2.2.0"
  },
  "changelog": {
    "labels": {
      "Type: Feature": "Features",
      "Type: Bug": "Bug fixes",
      "Type: Enhancement": "Enhancements"
    }
  }
}
