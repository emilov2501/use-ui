{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:prod": "nx run useui-ts:build:prod",
    "watch:useui-ts": "nx watch --projects=useui-ts --skip-nx-cache -- nx build:dev useui-ts",
    "dev:www": "nx dev www --skip-nx-cache",
    "release": "lerna publish from-package --no-private",
    "version": "lerna version --no-private"
  },
  "devDependencies": {
    "lerna": "8.1.2",
    "lerna-changelog": "^2.2.0",
    "nx": "^18.0.4"
  },
  "changelog": {
    "labels": {
      "Type: Feature": "Features",
      "Type: Bug": "Bug fixes",
      "Type: Enhancement": "Enhancements"
    }
  }
}
